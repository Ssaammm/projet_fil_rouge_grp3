

{% block body %}

	<!-- Page Heading -->
	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800 ml-5">{% trans %}Mes opérations{% endtrans %}
		</h1>
	</div>

	<div class="container-fluid">
		<div class="row justify-content-center">


			{% for user in tasks|filter( user => user.user == app.user and user.status.id == 2)  %}

				<!-- Basic Card Example -->
				<div class="card shadow m-3 col-md-12 col-lg-4 col-xl-3">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">{% trans %}Client :{% endtrans %}
							{{ (user.client.nom) }}
							{{ (user.client.prenom) }}</h6>
					</div>
					<div class="card-body">
						<p class="card-text">{{ (user.description) }}</p>
						<p class="card-text">{% trans %}Type:{% endtrans %}
							{{ (user.type) }}</p>
						<p class="card-text">{% trans %}Tarification:{% endtrans %}
							{% if user.type == "PETITE" %}1000 €
							{% endif %}
							{% if user.type == "MOYENNE" %}2500 €
							{% endif %}
							{% if user.type == "GROSSE" %}10000 €
							{% endif %}
						</p>
					</div>
					<div class="footer mb-3">
						<a href="{{ path('app_task_termineTask', { 'id': user.id }) }}" type="button" class="btn btn-primary ml-3">{% trans %}Terminer{% endtrans %}
						</a>
					</div>

				</div>

			{% endfor %}
		</div>
	</div>


{% endblock %}


