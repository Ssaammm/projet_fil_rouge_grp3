		<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Propar
			{% endblock %}
		</title>

		
		<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css">
		

		<style>
			body{
				background-color: ; 
			}
		</style>
		{% block stylesheets %}
			{#{{ encore_entry_link_tags('app') }}#}
		{% endblock %}

		{% block javascripts %}
			{#{{ encore_entry_script_tags('app') }}#}
		{% endblock %}

	</head>


	<body>

		{# Condition pour que la navbar s'affiche uniquement lorsqu'on se connecte (if app.user) #}
		{% if app.user %}
		
		<div class="d-flex flex-row">

			<div class="d-flex flex-column vh-100 flex-shrink-0 p-3 text-white bg-dark sticky-top" style="width: 250px;">
				<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
					<svg class="bi me-2" width="40" height="32"></svg>
					<span class="fs-4">Propar</span>
				</a>
				<hr>
				<ul class="nav nav-pills flex-column mb-auto">
					<li class="nav-item">
						<a href="#" class="nav-link text-white" aria-current="page">
							<i class="fa fa-home"></i>
							<span class="ms-2">Home</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_task_new') }}" class="nav-link text-white">
							<i class="fa fa-dashboard"></i>
							<span class="ms-2">Nouvelle opération</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_task_affichage') }}" class="nav-link text-white">
							<i class="fa fa-dashboard"></i>
							<span class="ms-2">Affichage des opérations</span>
						</a>
					</li>
					<li>
						<a href="{{ path('app_task_affichage_perso') }}" class="nav-link text-white">
							<i class="fa fa-dashboard"></i>
							<span class="ms-2">Mes opérations</span>
						</a>
					</li>


					{% if is_granted('ROLE_EXPERT') == true %}
						<li>
							<a href="{{ path('app_register') }}" class="nav-link text-white">
								<i class="fa fa-dashboard"></i>
								<span class="ms-2">Nouvel utilisateur</span>
							</a>
						</li>
						<li>
							<a href="{{ path('app_task_affichage_terminees') }}" class="nav-link text-white">
								<i class="fa fa-dashboard"></i>
								<span class="ms-2">Opérations terminées</span>
							</a>
						</li>
						<li>
							<a href="{{ path('app_chiffre_affaire') }}" class="nav-link text-white">
								<i class="fa fa-dashboard"></i>
								<span class="ms-2">Chiffre d'Affaire</span>
							</a>
						</li>
						<li>
							<a href="{{ path('app_utilisateur') }}" class="nav-link text-white">
								<i class="fa fa-dashboard"></i>
								<span class="ms-2">Utilisateurs</span>
							</a>
						</li>
					{% endif %}
				</ul>
				{% endif %}

				
				<hr>
				{% if app.user %}
					<div class="dropdown">
						<a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
							<img src="https://github.com/mdo.png" alt="" width="32" height="32" class="rounded-circle me-2">
							<strong>
								{{ app.user.prenom }}
								[{{ app.user.roles|join }}]</strong>
						</a>
						<ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
							<li>
								<hr class="dropdown-divider">
							</li>
							<li>
								<a class="dropdown-item" href="{{ path('app_logout') }}">Sign out</a>
							</li>
						</ul>
					</div>
				{% endif %}
			</div>


			<div>


				{# <div class="container"> #}

				{% block body %}{% endblock %}

			</div>
		</div>

	</div>

