

{% block body %}

	<div class="d-sm-flex align-items-center justify-content-between mb-4">
		<h1 class="h3 mb-0 text-gray-800 ml-5">{% trans %}Opérations terminées{% endtrans %}
		</h1>
	</div>

	<div class="container-fluid">
		<div class="row justify-content-center">

			{% for user in tasks|filter( user => user.status.id == 3)|sort((a , b) => a.client.nom <=> b.client.nom)  %}


				<!-- Basic Card Example -->
				<div class="card shadow m-3 col-md-12 col-lg-4 col-xl-3">
					<div class="card-header py-3">
						<h6 class="m-0 font-weight-bold text-primary">
							Client :
							{{ (user.client.nom) }}
							{{ (user.client.prenom) }}</h6>
					</div>
					<div class="card-body">
						<h5 class="card-title">Description:
						</h5>
						<p class="card-text">{{ (user.description) }}</p>
						<p class="card-text">type:
							{{ (user.type) }}</p>
						<p class="card-text">Tarification:
							{% if user.type == "PETITE" %}1000 €
							{% endif %}
							{% if user.type == "MOYENNE" %}2500 €
							{% endif %}
							{% if user.type == "GROSSE" %}10000 €
							{% endif %}
						</p>
					</div>
					<div class="card-footer text-light bg-dark">Fait par :
						{{ (user.user.nom) }}
						{{ (user.user.prenom) }}
					</div>

				</div>
			{% endfor %}
		</div>
	</div>

{% endblock %}


